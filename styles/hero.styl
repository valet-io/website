header.hero
  height: 500px
  position: relative
  padding-top: 55px
  margin-top: -1 * @padding-top
  margin-left: -10px
  margin-right: @margin-left

  color: white
  background:  linear-gradient(150deg, rgba(149, 31, 30, 1) 0%, rgba(225, 65, 0, 1) 53.65%, rgba(210, 111, 0, 1) 100%)

  text-shadow: 0 1px 2px rba(black, .2)
  -webkit-font-smoothing: antialiased

  .text
    text-align: center

  h1
    font-weight: 500
    font-size: 2.2em
    margin-top: 1.2em

  h2
    font-size: 1.2em
    line-height: 1.4em
    padding-bottom: .2em
    margin-top: .5em
    margin-bottom: 1em

    color: rgba(white, .8)

  h1, h2
    padding-left: 20px
    padding-right: @padding-left

  .demo
    width: 50%
    float: right
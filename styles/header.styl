#main-header
  position: relative
  z-index: 20
  font-size: 1.2em
  font-family: $secondary-font
  user-select: none

  .container
    height: 54px
    border-bottom: 1px solid rgba(white, .2)

  &.transparent
    color: white

  h1
    width: 113px
    height: 35px

    position: absolute
    top: 10px
    z-index: 10

    hide-text()

    a
      display: block
      width: 100%
      height: 100%

      /.transparent&
        image: '/images/logo.png' 113px 35px
        opacity: .95

  nav
    position: relative

    & .actions
      position: absolute
      right: 0
      padding-top: 20px
      top: -5px

    & li
      display: inline

      color =  rgba(white, .85)
      border = rgba(white, .75)
      hover = white
      fill = rgba(216,222,227,0.1)

      & a
        text-decoration: none
        color: color

        &:hover
          color: hover

        &:active
          background: fill

      &.button a
          display: inline-block
          height: 25px
          line-height: @height
          padding: 0 12px
          border-radius: 15px
          border: 1px solid border
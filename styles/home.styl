.links
  border = 0 solid rgba(lighten(black, 35%), .1)
  border-bottom: border

  section
    text-align: center

    a
      display: block
      padding: 1em
      border-top: border
      border-top-width: 1px
      color: inherit

      &:hover
        background: rgba(14,60,86,0.04)

    i
      color = desaturate($green, 30%)
      display: inline-block
      font-size: 4em
      border-radius: 50%
      border: 3px solid color
      color: color
      padding: .5em

    h2
      color: #292e31
      font-size: 1.5em

    p
      font-size: 1.2em
      line-height: 1.5em

    color: lighten(black, 40%)

  @media $tablet
    display: table

    section
      display: table-cell
      width: 33.333%

      a
        padding: 2em 1em
        border: border

      &:nth-child(1) a
        border-left-width: 1px
      &:nth-child(2) a
        border-left-width: 1px
        border-right-width: 1px
      &:nth-child(3) a
        border-right-width: 1px

      h2
        margin-top: 1em